{
  "$schema": "http://json.schemastore.org/prettierrc",
  "semi": true,
  "tabWidth": 4,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 150,
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "tabWidth": 2,
        "vueIndentScriptAndStyle": true,
        "bracketSameLine": true
      }
    }
  ]
}
