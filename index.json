{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "semi": true,
      "tabWidth": 4,
      "trailingComma": "all",
      "singleQuote": true,
      "printWidth": 150,
      "vueIndentScriptAndStyle": true,
      "bracketSameLine": true
    },
    {
      "files": [
        "*.js",
        "*.ts"
      ],
      "semi": true,
      "tabWidth": 4,
      "trailingComma": "all",
      "singleQuote": true,
      "printWidth": 150
    }
  ]
}
