{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "semi": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 150,
        "vueIndentScriptAndStyle": true,
        "bracketSameLine": true
      }
    },
    {
      "files": [
        "*.js",
        "*.ts"
      ],
      "options": {
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 150
      }
    }
  ]
}
